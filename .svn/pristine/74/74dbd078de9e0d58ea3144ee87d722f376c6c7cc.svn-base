                    text = othis.text(),
                    index = othis.data("param");
//                var index = type.substring(type.length -1, type.length);
                var inp = document.getElementById("id" + index);
                var businessno = document.getElementById("businessno"+index);
                $.ajax({
                    url:"<%= basePath%>init/building?id="+inp.value + "&businessno=" +businessno.value,
                    type:"get",
                    async:false,
                    dataType:"json",
                    success:function(data) {
                        flag = data.flag
                        console.log(data)
                        debugger
//                        判断是否在审核中
                        if(data.flag != '3'){
                            $("#tabId").css('display','');
                            if(data.flag  === '2'){
                                $("#nextAudittr").css('display','');
                            }
                        }else{
                            $("#tabId").css('display','none');
                            $("#nextAudittr").css('display','none');
                        }
                        trueFlag(data);
                        form1.render();
                    }
                })
            if(flag != 1){
                layer.open({
                    type: 1
                    ,offset: type //具体配置参考：http://www.layui.com/doc/modules/layer.html#offset
                    ,id: 'LAY_demo'+type //防止重复弹出
                    ,btn: ['保存','注销','取消']
